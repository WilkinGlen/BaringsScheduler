<MudStack>
    <MudTimePicker Label="Select time for schedule" Color="Color.Dark" TimeChanged="@this.TimeChangedHandler" />
    <MudSelect T="int" Value="@this.selectedDay" Label="Select day of the month" ValueChanged="@this.SelectedDayChanged">
        @foreach (var day in this.days)
        {
            <MudSelectItem Value="@day" />
        }
    </MudSelect>
</MudStack>